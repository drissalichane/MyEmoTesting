# Environment variables template
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=suiviemot
DB_USERNAME=postgres
DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_ACCESS_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# File Storage
FILE_STORAGE_BASE_PATH=/var/myemohealth/storage
FILE_MAX_SIZE_MB=50

# Voice Analysis Service
VOICE_ANALYSIS_ENABLED=true
VOICE_ANALYSIS_SERVICE_URL=http://localhost:8081/api/analyze
VOICE_ANALYSIS_API_KEY=your_api_key_here
VOICE_ANALYSIS_TIMEOUT_SECONDS=30

# WebRTC Configuration
WEBRTC_ENABLED=true
WEBRTC_STUN_SERVER=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVER=
WEBRTC_TURN_USERNAME=
WEBRTC_TURN_PASSWORD=

# Email Configuration
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@myemohealth.com
EMAIL_FROM_NAME=MyEmoHealth

# Security
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000
ENCRYPTION_ALGORITHM=AES/GCM/NoPadding
ENCRYPTION_KEY_SIZE=256

# Application
APP_NAME=MyEmoHealth
APP_VERSION=1.0.0
APP_ENVIRONMENT=development
